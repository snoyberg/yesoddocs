h1 {
    text-align: center;
}

.contributor {
    margin: 2em auto;
    font-size: 1.2em;
    border: 1px solid black;
    padding: 1em;
    background-color: #eee;
    max-width: 650px;
}

.contributor > a {
    width: 180px;
}

.dummy {
    height: 160px;
}

.contributor > a, .contributor > div {
    display: table-cell;
    padding-right: 1em;
    vertical-align: top;
}

.contributor > a > span {
    display: block;
}
